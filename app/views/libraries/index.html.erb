<%= form_with url: books_path, method: :post do |form| %>
  <div class="form-group">
    <%= form.text_field :isbn, placeholder: "Search by isbn", class: "form-control" %>
    <%= form.submit "Add Book", class: "btn btn-secondary mt-3" %>
  </div>

<% end %>
<h2>Books</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>ISBN</th>
      <th>Title</th>
      <th>Authors</th>
      <th>Subjects</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: 'book', collection: @books, cached: true %>
  </tbody>
</table>
